<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.mellow.hong.myeasyservice.MainActivity"
    android:orientation="vertical"
    android:id="@+id/MyDrawer">

    <!--//Content-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Toolbar-->

        <!--Content Fragment-->
        <FrameLayout
            android:id="@+id/contentFragmentMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>
    <!--Drawer Menu-->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_gravity="start"
        android:padding="@dimen/margin">
     <!--Title   -->

        <TextView
            android:text="Drawer Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h1"/>
        <!--Main fragment menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home"/>

            <!--Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2"
                android:text="Main Fragment"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtMain"
                android:clickable="true"
                />

        </LinearLayout>

        <!--second fragment menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_second"/>

            <!--Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2"
                android:text="Second Fragment"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@+id/txtSecond"
                />

        </LinearLayout>
        <!--Exit menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_exit"/>

            <!--Text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2"
                android:text="Exit"
                android:textColor="#3E3F48"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@+id/txtExit"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
